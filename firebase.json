{
  "hosting": {
    "public": ".",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {"source": "/", "destination": "/index.html"},
      {"source": "/services/", "destination": "/services.html"},
      {"source": "/educational-library/", "destination": "/educational-library.html"},
      {"source": "/login/", "destination": "/login.html"},
      {"source": "/contact/", "destination": "/contact.html"},
      {"source": "/refund_returns/", "destination": "/refund_returns.html"},
      {"source": "/terms-of-service/", "destination": "/terms-of-service.html"},
      {"source": "/registration/", "destination": "/registration.html"},
      {"source": "/branding/", "destination": "/branding.html"},
      {"source": "**", "destination": "/index.html"} // Fallback
    ]
  }
}